<div class="profile-card container">
  <section class="row">
    <div class="col-3 profile-image card">
      <img src="{{image}}" alt="No photo" id="profileID" />
      {{!-- <img src="./uploads/rontron_avatar.png" alt="No photo" id="profileID" /> --}}
    </div>
    <div class="col-8">
      <div class="card">
        <h2>{{username}}</h2></div>
      <div class="card">
        <p>Name: {{name}}</p>
        <p>Email: {{email}}</p>
      </div>
    </div>
  </section>
  <section class="row">
    <aside class="col-3 card">
      <h3>Wishlist</h3>
      {{#each user.wishlist as |item|}}
        <p>{{item}}</p>
      {{/each}}
    </aside>
    <div class="col-8 card">
      <p>Favorite Games: {{favorites}}</p>
      <p>Platforms: {{platforms}}</p>
      <p>Genre: {{tags}}</p>
    </div>
  </section>
</div>

<div class = "imageupload-form col">
  <h1>Upload a profile</h1>
  <form action="/upload" method="post" enctype="multipart/form-data">
    <input type="file" accept=".jpg, .png, .gif">
    <button type="submit">Upload</button>
  </form>
</div>

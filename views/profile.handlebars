<div class="profile-card container">
  <section class="row">
    <div
      class="col-md-3 col-sm-12 d-flex justify-content-center align-items-center"
    >
      <div class="profile-image card">
      </div>
    </div>
    <div class="col-md-8 col-sm-12">
      <div class="card">
        <h2>{{username}}</h2>
      </div>
      <div class="card">
        <p>Name: {{name}}</p>
        <p>Email: {{email}}</p>
      </div>
    </div>
  </section>
  <section class="row">
    <aside class="col-md-3 col-sm-12">
      <div class="card">
        <h3>Wishlist</h3>
        {{#each user.wishlist as |item|}}
          <p>{{item}}</p>
        {{/each}}
      </div>
    </aside>
    <div class="col-md-8 col-sm-12">
      <div class="card">
        <p>Favorite Games: {{favorites}}</p>
        <p>Platforms: {{platforms}}</p>
        <p>Genre: {{tags}}</p>
      </div>
    </div>
  </section>
</div>
{{#each posts as |post|}}
{{>post-details}}
{{/each}}
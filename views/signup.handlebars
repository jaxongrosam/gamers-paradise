<div class="container">
  <div class="row justify-content-center">
    <div class="signup-card col-4">
      <h2 style="color:white;">Signup</h2>
      <form class="signup-form">
        <div class="form-group">
          <label for="username-signup" style="color:white;">Username:</label>
          <input type="text" id="username-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup" style="color:white;">Email: </label>
          <input type="email" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="name-signup" style="color:white;">Name (optional): </label>
          <input type="text" id="name-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup" style="color:white;">Password:</label>
          <input type="password" id="password-signup" />
        </div>
        <button type="submit">Submit</button>
      </form>

<script src="./js/signup.js"></script>